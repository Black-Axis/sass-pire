{
    "name": "sass-pire",
    "version": "0.0.1",
    "description": "Just a more mixins and functions with SCSS for more productive projects.",
    "license": "MIT",
    "author": {
        "name": "Khaled Mohamed",
        "email": "k.mohamed.11.98@gmail.com",
        "url": "https://github.com/krypton225"
    },
    "bugs": {
        "url": "https://github.com/krypton225/sass-pire/issues"
    },
    "homepage": "https://github.com/krypton225/sass-pire#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/krypton225/sass-pire"
    },
    "keywords": [
        "SCSS",
        "SASS",
        "sass-pire",
        "ui-library",
        "sass-library",
        "scss-library"
    ],
    "scripts": {
        "sass:watch": "sass --no-source-map ./src/sass-pire.scss:dist/styles.css --watch",
        "sass:comp": "sass --no-source-map ./src/sass-pire.scss:dist/styles.min.css --watch --style=compressed",
        "upgrade": "ncu --upgrade",
        "lint": "npx stylelint ./src/**/*.scss",
        "cmt": "cz",
        "gen:lock": "npm i --package-lock-only",
        "test": "sass --no-source-map ./tests/test.scss:dist/test-styles.css --watch"
    },
    "devDependencies": {
        "cz-conventional-changelog": "^3.3.0",
        "npm-check-updates": "^16.14.6",
        "sass": "^1.69.5",
        "stylelint": "^15.11.0",
        "stylelint-config-standard-scss": "^11.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
